<Application x:Class="XamlBrewer.UWP.MvvmToolkitValidation.Sample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:XamlBrewer.UWP.MvvmToolkitValidation.Sample"
             RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="SystemAccentColor">DarkSalmon</Color>
            <SolidColorBrush x:Key="SystemAccentColorBrush"
                             Color="{StaticResource SystemAccentColor}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
